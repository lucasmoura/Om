<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:baselineAligned="false">
	
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#d3d3d3">
        
        <ImageButton 
            android:layout_alignParentRight="true"
            android:id="@+id/now_playing_button"
            android:src="@drawable/img_btn_now_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:contentDescription="@string/now_playing_description"
            
        />
        
         <TextView
            android:layout_centerInParent="true"
            android:id="@+id/songsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/songs_textview"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            
        />
        
    </RelativeLayout>
    
	<RelativeLayout 
	    android:layout_width="fill_parent"
        android:layout_height="30dip">
    
	    <EditText 
	    
	    	android:id="@+id/searchField"
	    	android:layout_centerInParent="true"
	    	android:layout_width="240dp"
	    	android:layout_height="wrap_content"
	    	android:hint="@string/searchFieldHint"
	    	android:gravity="center_horizontal"
	    	android:cursorVisible="false"
	    	android:background="@layout/rounded_corner"
	  
	    />
    
    </RelativeLayout>
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" 
	    android:baselineAligned="false">    
	    
	  
	    <ListView
	        android:id="@+id/songList"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:fastScrollEnabled="true" />
	
	    <LinearLayout
	        android:id="@+id/alphabeticSideIndex"
	        android:layout_width="40dip"
	        android:layout_height="fill_parent"
	        android:background="#FFF"
	        android:gravity="center_horizontal"
	        android:orientation="vertical" >
	    </LinearLayout>
	
	</LinearLayout>
	
</LinearLayout>	